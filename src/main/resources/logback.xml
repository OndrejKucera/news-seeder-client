<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601,UTC} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="akka" level="DEBUG"/>
    <logger name="akka.io" level="INFO"/>
    <logger name="akka.http.impl" level="INFO"/>
    <logger name="com.amazonaws" level="WARN"/>
    <logger name="com.typesafe.sslconfig" level="INFO"/>
    <logger name="com.cisco.ciscossl" level="INFO"/>
    <logger name="org.apache.http" level="INFO"/>

    <root level="${LOG_LEVEL:-DEBUG}">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
